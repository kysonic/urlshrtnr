html

  background #282626
  margin 0
  padding 0

  &.locked

    overflow hidden

body
  margin 0
  padding 0
  min-width 320px
  max-width 100%
  background #f9f7f5
  color #4d4441
  height 100vh
  font-family 'Open Sans', sans-serif
  background: #fff url('../../images/scsrss.png') space 0 0
  background-size 4%
a

  text-decoration: underline;

.text-center

  text-align: center;

.text-right

  text-align: right;

.v-center

  display: inline-block;
  vertical-align: middle;

.v-top

  display inline-block
  vertical-align top

.h1, h1

  padding-top 25px
  font-size 18px
  font-weight 800
  text-transform uppercase
  line-height 1.35
  margin 0
  padding 0
.h2

  font-size 18px
  font-weight 800
  line-height 1.35

.h3

  font-size 14px
  font-weight 800
  line-height 1.35

b, strong
  font-weight: bold;

h1
  font-size 24px
  padding 10px 0
  font-weight bold
a
  color #ff7e33
  &:hover
    color #dd722f
    text-decoration none
  &:active
    color #dd722f
  &:visited
    color #dd722f

p, ol, ul
  text-indent 10px
  line-height 20px
  li
    padding 5px 0
.sub-title
  font-size 12px
  color #8e8886
  text-align right

ul.custom-circle
  padding 10px 0
  li:before
